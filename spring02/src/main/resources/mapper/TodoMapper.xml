<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.koeyh.spring02.mapper.TodoMapper">

    <select id="selectTodos" resultType="com.koeyh.spring02.domain.Todo">    
        SELECT TNO
            , TITLE
            , DUEDATE
            , WRITER
            , ISDONE 
        FROM TODOS
    </select>
    <select id="selectTodo" resultType="com.koeyh.spring02.domain.Todo" parameterType="int">
        SELECT TNO
            , TITLE
            , DUEDATE
            , WRITER
            , ISDONE
          FROM TODOS
        WHERE TNO = #{tno}
    </select>
</mapper>